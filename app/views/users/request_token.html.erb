<form class="user-form" action="<%= reset_password_users_url %>" method="post">
  <%= auth_token %>

  <h3>Reset password</h3>

  <div class="input">
    <label for="user_email">Email:</label>
    <input type="email" id="user_email"
      name="user[email]">
  </div>

  <div class="submit">
    <input type="submit" value="Send email">
  </div>
</form>