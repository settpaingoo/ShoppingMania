<form action="<%= cart_item_url(cart_item) %>" method="post" class="update" data-remote="true">
  <input type="hidden" name="_method" value="put">
  <%= auth_token %>

  <input type="number" id="cart_item_quantity"
    name="cart_item[quantity]" value="<%= cart_item.quantity %>">

  <input type="submit" value="Update Quantity">
</form><br>

<%= button_to "Remove Item", cart_item_url(cart_item), remote: true, method: :delete, form_class: "remove"%>