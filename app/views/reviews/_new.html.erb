<h3>Post a review</h3>
<form action="<%= item_reviews_url(item) %>" method="post">
  <%= auth_token %>

  <% flash[:errors].try(:each) do |error| %>
    <p class="error"><%= error %></p>
  <% end %>

  <div class="choose">
    <label for"review_rating">Rating (1-5)</label>
    <input type="number" id="review_rating" name="review[rating]">
  </div>

  <div class="input">
    <label for="review_title">Title</label>
    <input type="text" id="review_title" name="review[title]">
  </div>

  <div class="input">
    <label for="review_body">Body</label>
    <textarea id="review_body" name="review[body]"></textarea>
  </div>

  <div class="submit">
    <input type="submit" value="Write a review">
  </div>
</form>