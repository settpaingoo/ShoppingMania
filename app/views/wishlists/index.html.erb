<label>Wishlists</label>
<ul>
  <% @wishlists.each do |wishlist| %>
  <li><%= wishlist.name %></li>
  <ul>
    <% wishlist.wishlist_items.each do |wl_item| %>
    <li><%= wl_item.item.name %></li>
    <% end %>
  </ul>
  <% end %>
</ul>

<form action="<%= wishlists_url %>" method="post">
  <%= auth_token %>

  <label for="wishlist_name">Name</label>
  <input type="text" id="wishlist_name" name="wishlist[name]">

  <input type="submit" value="Create new wishlist">
</form>