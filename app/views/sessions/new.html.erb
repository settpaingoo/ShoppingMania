<form class="user-form" action="<%= session_url %>" method="post">
  <%= auth_token %>

  <h1>Welcome</h1>

  <div class="input">
    <label for="user_email">Email:</label>
    <input type="email" id="user_email" name="user[email]">
  </div>

  <div class="input">
    <label for="user_password">Password:</label>
    <input type="password" id="user_password" name="user[password]">
  </div>

  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:error] %>
    <p class="error"><%= flash[:error] %></p>
  <% end %>

  <div class="submit">
    <input type="submit" value="Log in">
  </div>

  <p id="or">OR</p>

  <a href="/auth/facebook" class="fb-login">Log in with Facebook</a>

  <div class="bot-nav-links group">
    <%= link_to "New User?", new_user_url, class: "new-user" %>
    <%= link_to "Forgot password?", reset_password_users_url, class: "reset-password" %>
  </div>

  <%= render partial: "demo" %>
</form>